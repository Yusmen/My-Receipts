@using MyReceipts.Common
@model MyReceipts.Web.ViewModels.Home.IndexViewModel
@{
    this.ViewData["Title"] = "Home Page";
}

@*@section Styles{ 
    <link rel="stylesheet" href="~/css/HighChartDemo/index.css" />*@


<div class="text-center row">
    <h1 class="display-4">Welcome to @GlobalConstants.SystemName!</h1>
    <div class="col-md-8">
        <div class="row">
            @foreach (var recipe in this.Model.RandomRecipes)
            {
                <div class="card col-md-6" >
                    <img class="card-img-top" src="@recipe.ImageUrl" alt="@recipe.Name">
                    <div class="card-body">
                        <h5 class="card-title">@recipe.Name</h5>
                        <p class="card-text">@recipe.CategoryName</p>
                        <a asp-controller="Recipes" asp-action="ById" asp-route-id="@recipe.Id" class="btn btn-primary">Go to recipe</a>
                    </div>
                </div>
            }
        </div>
      
    </div>
    <div class="col-md-4">
        <p>We have:</p>
        <ul>
            <li class="list-group-item bg-info">Recipes: @Model.RecipesCount</li>
            <li class="list-group-item bg-light">Ingredients: @Model.IngredientsCount</li>
            <li class="list-group-item bg-transparent">Categories: @Model.CategoriesCount</li>
            <li class="list-group-item bg-dark">Images: @Model.ImagesCount</li class="list-group-item">


        </ul>
    </div>

</div>

